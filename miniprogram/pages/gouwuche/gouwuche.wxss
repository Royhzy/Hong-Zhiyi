@charset "UTF-8";
.top {
  height: 100%;
  width: 750rpx;
  position: fixed;
  background: #F6F6F6;
  z-index: 0;
  transition: all 0.4s ease;
}

.top .header .selectAll {
  position: absolute;
  left: 25rpx;
  top: 32rpx;
}

.top .root {
  background-color: #d3f1ff;
  height: 80rpx;
  display: flex;
  padding: 15rpx;
}

.top .root .quanxuantext {
  margin-left: 74rpx;
  font-size: 38rpx;
  margin-top: 14rpx;
  font-weight: bold;
  color: #2F54EB;
}

.top .root .shanchu {
  color: #2F54EB;
  border: 1px solid;
  width: 200rpx;
  height: 60rpx;
  font-size: 34rpx;
  line-height: 20rpx;
  border-radius: 40rpx;
  margin-left: 370rpx;
  margin-top: 8rpx;
}

.top .bot .item {
  margin-right: 20rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
  height: 250rpx;
  background-color: white;
  position: relative;
  margin-top: 25rpx;
}

.top .bot .item .xuanze {
  position: absolute;
  margin-left: 3rpx;
  margin-top: 100rpx;
}

.top .bot .item .inimg {
  width: 225rpx;
  height: 225rpx;
  margin-top: 10rpx;
  margin-left: 70rpx;
  float: left;
  position: absolute;
  border-radius: 10rpx;
}

.top .bot .item .title {
  display: -webkit-box;
  font-size: 34rpx;
  text-overflow: ellipsis;
  /*文字隐藏后添加省略号*/
  word-break: break-all;
  -webkit-box-orient: vertical;
  width: 400rpx;
  height: 95rpx;
  font-weight: bold;
  margin-top: 10rpx;
  margin-left: 315rpx;
  position: absolute;
  overflow: hidden;
  -webkit-line-clamp: 2;
  /*控制显示行数*/
}

.top .bot .item .dianpu {
  font-size: 26rpx;
  margin-top: 125rpx;
  margin-left: 315rpx;
  padding-right: 15rpx;
  padding-left: 15rpx;
  position: absolute;
  background-color: #e7e7e7;
  border-radius: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top .bot .item .price {
  font-size: 44rpx;
  font-weight: bold;
  color: #eb4f44;
  float: left;
  margin-top: 182rpx;
  width: 100rpx;
  margin-left: 320rpx;
  position: absolute;
}

.top .bot .item .jiaimg {
  margin-left: 650rpx;
  margin-top: 190rpx;
  width: 45rpx;
  height: 45rpx;
  position: absolute;
}

.top .bot .item .num {
  width: 43rpx;
  text-align: center;
  font-size: 30rpx;
  margin-left: 606rpx;
  margin-top: 190rpx;
  height: 50rpx;
  position: absolute;
}

.top .bot .item .jianimg {
  margin-left: 560rpx;
  margin-top: 190rpx;
  width: 45rpx;
  height: 45rpx;
}

.top .bot .zanwu {
  font-size: 36rpx;
  color: #a5a3a3;
  text-align: center;
  margin-top: 30rpx;
}

.top .bot .qianwang {
  margin-top: 30rpx;
  background-color: #D3F1FF;
  color: #2F54EB;
  border-radius: 80rpx;
  width: 450rpx;
}

.top .foot {
  height: 85rpx;
  background-color: white;
  position: fixed;
  width: 100%;
  float: left;
}

.top .foot .foottext {
  float: left;
  margin-left: 30rpx;
  margin-top: 12rpx;
}

.top .foot .jiesuan {
  border: 1px solid;
  font-size: 34rpx;
  line-height: 20rpx;
  width: 200rpx;
  height: 60rpx;
  color: #2F54EB;
  border-radius: 40rpx;
  margin-left: 530rpx;
  margin-top: 10rpx;
}
