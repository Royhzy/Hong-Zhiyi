@charset "UTF-8";
.bottom {
  height: 100%;
  width: 750rpx;
  background-image: linear-gradient(90deg, #64b1ff, #c1e0ff);
  position: fixed;
  z-index: 0;
}

.bottom .content {
  padding-top: 200rpx;
}

.bottom .content .wc {
  border-bottom: 1px solid #f0f0f0;
  color: #f0f0f0;
  padding: 30rpx 0 30rpx 0;
}

.bottom .content .wcgq {
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
  color: #f0f0f0;
  padding: 30rpx 0 30rpx 0;
}

.top {
  height: 100%;
  width: 750rpx;
  position: fixed;
  background: #F6F6F6;
  z-index: 0;
  transition: all 0.4s ease;
  /* 去掉滚动条 */
}

.top .header image {
  position: absolute;
  width: 74rpx;
  height: 74rpx;
  left: 20rpx;
  top: 16rpx;
}

.top ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.top .root {
  background-image: linear-gradient(45deg, #a3d1ff, #d9ecff);
  height: 160rpx;
  display: flex;
  padding: 15rpx;
}

.top .root .input {
  flex: 1;
  border: 1px solid gray;
  border-radius: 20rpx;
  margin-left: 100rpx;
  margin-top: 15rpx;
  margin-right: 10rpx;
  padding-left: 25rpx;
  font-size: 30rpx;
  height: 50rpx;
}

.top .root .sousuo {
  font-size: 36rpx;
  line-height: 54rpx;
  color: #6a85ff;
  font-weight: bold;
  height: 55rpx;
  width: 96rpx;
  text-align: center;
  margin-top: 14rpx;
  border-radius: 20rpx;
}

.top .mid {
  margin-top: -95rpx;
  height: 100rpx;
}

.top .mid .midbtn1 {
  color: #6a85ff;
  border-radius: 20rpx;
  background-color: #f5f3f3;
  width: 190rpx;
  line-height: 20rpx;
  margin-left: 45rpx;
  height: 60rpx;
  margin-top: 15rpx;
  float: left;
  font-size: 34rpx;
  padding-top: 20rpx;
}

.top .bot .item {
  margin-right: 20rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
  height: 250rpx;
  background-color: white;
  position: relative;
  margin-top: 25rpx;
}

.top .bot .item .inimg {
  width: 230rpx;
  height: 230rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  float: left;
  position: absolute;
  border-radius: 10rpx;
}

.top .bot .item .title {
  display: -webkit-box;
  font-size: 34rpx;
  text-overflow: ellipsis;
  /*文字隐藏后添加省略号*/
  word-break: break-all;
  -webkit-box-orient: vertical;
  width: 430rpx;
  height: 90rpx;
  font-weight: bold;
  margin-top: 10rpx;
  margin-left: 260rpx;
  position: absolute;
  overflow: hidden;
  -webkit-line-clamp: 2;
  /*控制显示行数*/
}

.top .bot .item .dianpu {
  font-size: 26rpx;
  margin-top: 125rpx;
  margin-left: 260rpx;
  padding-right: 15rpx;
  padding-left: 15rpx;
  position: absolute;
  background-color: #e7e7e7;
  border-radius: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #3c3c3c;
}

.top .bot .item .xiaoliang {
  font-size: 26rpx;
  margin-top: 125rpx;
  margin-left: 540rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  position: absolute;
  color: #3c3c3c;
}

.top .bot .item .price {
  font-size: 44rpx;
  font-weight: bold;
  color: #eb4f44;
  float: left;
  margin-top: 182rpx;
  width: 100rpx;
  margin-left: 265rpx;
  position: absolute;
}

.top .bot .item .gwimg {
  margin-left: 610rpx;
  margin-top: 190rpx;
  width: 50rpx;
  height: 50rpx;
}

.c-stare1 {
  transform: rotate(0deg) scale(1) translate(38%, 0%);
}
