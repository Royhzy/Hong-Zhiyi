@charset "UTF-8";
.bg {
  width: 100%;
  height: 450rpx;
  background-image: linear-gradient(90deg, #73b9ff, #d9f4fd);
}

.bg .addbtn {
  background-color: #fff;
  margin-top: 60rpx;
  height: 178rpx;
  width: 178rpx;
  border-radius: 150rpx;
  margin-left: 38%;
}

.bg .addbtn .sctxt {
  font-size: 30rpx;
  text-align: center;
  padding-top: 60rpx;
  color: #636363;
}

.tianxie {
  background-color: #fff;
  margin-top: -180rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-radius: 30rpx;
  height: 1090rpx;
}

.tianxie .drawer_content {
  overflow-y: scroll;
  /*超出父盒子高度可滚动*/
}

.tianxie .btn_ok {
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #E8E8EA;
  color: #2499d3;
  background-image: linear-gradient(90deg, #73b9ff, #d9f4fd);
  border-radius: 30rpx;
}

.tianxie .bottom {
  padding-bottom: 8px;
}

.tianxie .title {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 25%;
  margin: 5% 0 0 0;
  border-bottom: 2rpx solid #ccc;
}

.tianxie .input_base {
  width: 75%;
  margin: 5% 0 0 0;
  padding-left: 5%;
  border-bottom: 2rpx solid #ccc;
}

.tianxie input {
  font: 15px "microsoft yahei";
  background: #fff;
  color: #000;
}

.tianxie .grid {
  display: flex;
  margin: 20px;
}

.tianxie .addsfzbtn {
  background-color: #dfdfdf;
  margin-top: 10rpx;
  height: 178rpx;
  width: 178rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
}

.tianxie .addsfzbtn .scsfztxt {
  font-size: 30rpx;
  text-align: center;
  padding-top: 60rpx;
  color: #636363;
}
